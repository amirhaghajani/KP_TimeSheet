@using KP.TimeSheets.Domain
@model KP.TimeSheets.Domain.DailyLeave


<link href="~/lib/DatePicker/datepicker-theme.css" rel="stylesheet" />
<link href="~/lib/DatePicker/daterangepicker.css" rel="stylesheet" />


@{
    ViewBag.Title = "Create";
}

<div class="panel panel-info ras-center" style="margin-top:10px;width:50%">
    <div style="text-align:center" class="panel-heading">ثبت مرخصی روزانه</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
             
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.LabelFor(model => model.PersianDateFrom, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.PersianDateFrom, new { htmlAttributes = new { @class = "form-control jalali-datepicker" } })
                        @Html.ValidationMessageFor(model => model.PersianDateFrom, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PersianDateTo, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.PersianDateTo, new { htmlAttributes = new { @class = "form-control jalali-datepicker" } })
                        @Html.ValidationMessageFor(model => model.PersianDateTo, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.SuccessorID, null, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @*@Html.DropDownListFor(m => m.Country_id, (SelectList)ViewBag.CountryList, "Choose a Country", new { @class = "form-control" })*@
                        @Html.DropDownListFor(model => model.SuccessorID, (SelectList)ViewBag.SuccessorID, "جانشین را انتخاب کنید", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SuccessorID, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProjectID, null, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.ProjectID, (SelectList)ViewBag.ProjectID, "پروژه را انتخاب کنید", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProjectID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.Type, Html.GetEnumSelectList<DailyLeaveType>(), htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-3 col-md-8">
                        <input type="submit" value="ثبت" class="btn btn-success" />
                        @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-info zmdi zmdi-arrow-left", @title = "بازگشت" })
                    </div>
                </div>
            </div>
        }

           
    </div>
</div>

@section Scripts{
<script src="~/lib/DatePicker/html5shiv.js"></script>
<script src="~/lib/DatePicker/respond.min.js"></script>
<script src="~/lib/DatePicker/moment.min.js"></script>
<script src="~/lib/DatePicker/moment-jalaali.js"></script>
<script src="~/lib/DatePicker/daterangepicker-fa-ex.js"></script>
<script src="~/lib/DatePicker/daterangepicker.js"></script>

}
