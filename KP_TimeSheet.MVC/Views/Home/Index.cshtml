@{
    ViewData["Title"] = "Home Page";
}


<div class="jumbotron shadow">
    <h4 class="text-center">روز گذشته</h4>
    <hr />
    <div class="row">
        <div class="col-xs-3"><span style="margin-right:10px">حضور</span></div>
        <div class="col-xs-3">
            <div class="progress">
                <div id="PresenceYesterdaypercent" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="24" style="width:1%">
                    <span   class="sr-only"></span>
                </div>
            </div>
        </div>
        <div  class="col-xs-3"><h6 id="PresenceYesterday"></h6></div>
    </div>

    <div class="row">
        <div class="col-xs-3"><span style="margin-right:10px">کارکرد</span></div>
        <div class=" col-xs-3">
            <div class="progress">
                <div id="workYesterdaypercent" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="24" style="width:1%">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
        <div  class="col-xs-3"><h6 id="WorkYesterday"></h6></div>
    </div>

    <div class="row">
        <div class="col-xs-3"><span style="margin-right:10px">اختلاف حضور کارکرد</span></div>
        <div class=" col-xs-3">
            <div class="progress">
                <div id="differentYesterdaypercent" class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="24" style="width:1%">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
        <div  class="col-xs-3"><h6 id="differenceYesterday"></h6></div>
    </div>
</div>

<div class="jumbotron shadow">
    <h4 class="text-center">ماه گذشته</h4>
    <hr />
    <div class="row">
        <div class="col-xs-3"><span style="margin-right:10px">حضور</span></div>
        <div class=" col-xs-3">
            <div class="progress">
                <div id="PresenceThisMonthpercent" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="24" style="width:1%">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
        <div class="col-xs-3"><h6 id="PresenceThisMonth"></h6></div>
    </div>
    <div class="row">
        <div class="col-xs-3"><span style="margin-right:10px">کارکرد</span></div>
        <div class=" col-xs-3">
            <div class="progress">
                <div id="workThisMonthpercent" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="24" style="width:1%">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
        <div class="col-xs-3"><h6 id="WorkThisMonth"></h6></div>
    </div>
    <div class="row">
        <div class="col-xs-3"><span style="margin-right:10px">اختلاف حضور کارکرد</span></div>
        <div class=" col-xs-3">
            <div class="progress">
                <div id="differentThisMonthpercent" class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="24" style="width:1%">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
        <div class="col-xs-3"><h6 id="differenceThisMonth"></h6></div>
    </div>
</div>

<div class="jumbotron shadow">
    <h4 class="text-center">کارکرد منتظر تایید</h4>
    <hr />
    <div class="row">
        <div class="col-xs-3"><span style="margin-right:10px">کارکرد منتظر تایید شما</span> </div>
        <div class=" col-xs-3">
            <div class="progress">
                <div id="hoursWaitingToApprovePercent" class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="100" style="width:0%">
                    <span class="sr-only">70% Complete</span>
                </div>
            </div>
        </div>
        <div class="col-xs-3 "><h6 id="hoursWaitingToApprove"></h6></div>
    </div>
</div>

@section Scripts {

<script src="~/js/site.js" asp-append-version="true"></script>

}

